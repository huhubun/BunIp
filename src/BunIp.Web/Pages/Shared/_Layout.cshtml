@{
    var siteName = "Bun IP";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    @siteName
                </a>

                <span class="form-inline">
                    <span class="text-muted">v@(System.Reflection.Assembly.GetEntryAssembly().GetName().Version)</span>
                    <vc:pi-logo />
                </span>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-white text-center pt-3 pb-3">
        <div class="container">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="text-reset nav-link disabled" href="#">Bun IP <vc:ip-v6-tag></vc:ip-v6-tag></a>
                </li>
                <li class="nav-item">
                    <a class="text-reset nav-link" href="#">关于本站</a>
                </li>
                <li class="nav-item">
                    <a class="text-reset nav-link" href="https://github.com/huhubun/BunIp">GitHub</a>
                </li>
            </ul>

            <vc:ad position="F" />

            <div class="my-1">
                &copy; @DateTime.Now.Year <a class="text-reset" href="https://bun.plus">huhubun</a>
            </div>

            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="text-reset nav-link" href="http://www.beian.miit.gov.cn/">辽ICP备19020441号</a>
                </li>
                <li class="nav-item">
                    <a class="text-reset nav-link" href="http://www.beian.gov.cn/portal/registerSystemInfo?recordcode=21021102000757">辽公网安备21021102000757号</a>
                </li>
            </ul>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            $('#PiLogo').tooltip()
        })
    </script>
</body>
</html>
