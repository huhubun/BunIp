@using Configs.BunIpConfigs
@model BunIp.Web.Pages.Shared.Components.IpOnlyMessage.ViewModel

@if (Model.DeployMode.HasValue && Model.DeployMode != DeployMode.Hybrid && !String.IsNullOrEmpty(Model.HybridSiteUrl))
{
    <div class="alert alert-primary" role="alert">
        当前为 @Model.DeployMode Only 站点，建议访问主站 <a href="@Model.HybridSiteUrl" class="alert-link">@Model.HybridSiteUrl</a> 获取完整 IP 信息。
    </div>
}